<%- include('./partials/header') %>

<div class="w-full min-h-screen flex items-start px-20 py-20 gap-10">

    <!-- LEFT: CART ITEMS -->
    <div class="w-[30%] flex flex-col gap-6">

       <% if (!user || !user.cart || user.cart.length === 0) { %>
    <p>Your cart is empty</p>
<% } else { %>

            <p>Your cart is empty</p>
        <% } %>

        <% user.cart.forEach((product, index) => { %>
            <div class="rounded-md overflow-hidden border">

                <div class="w-full h-52 bg-yellow-500 flex items-center justify-center">
                    <% if (product.image) { %>
                        <img class="h-[10rem]"
                             src="data:image/jpeg;base64,<%= product.image.toString('base64') %>">
                    <% } else { %>
                        <img class="h-[10rem]" src="/images/default-product.png">
                    <% } %>
                </div>

                <div class="w-full flex justify-between px-5 py-4">
                    <h3 class="text-xl"><%= product.name %></h3>
                    <div class="flex items-center gap-2">
                        <i class="ri-add-line"></i>
                        <span>1</span>
                        <i class="ri-subtract-line"></i>
                    </div>
                </div>

                <div class="flex justify-between px-5 py-3">
                    <span>Price</span>
                    <span>₹ <%= product.price - (product.discount || 0) %></span>
                </div>

            </div>
        <% }) %>

    </div>

    <!-- RIGHT: BILL SUMMARY -->
    <div class="w-[70%]">
        <h3 class="text-xl">Price Breakdown</h3>

        <div class="px-10 mt-5">
            <div class="flex mt-2">
                <h4 class="w-1/3">Total Items</h4>
                <h4><%= user.cart.length %></h4>
            </div>

            <div class="flex mt-2">
                <h4 class="w-1/3">Platform Fee</h4>
                <h4>₹ 20</h4>
            </div>

            <div class="flex mt-2">
                <h4 class="w-1/3">Shipping Fee</h4>
                <h4>FREE</h4>
            </div>
        </div>

        <div class="w-full h-[1px] bg-black mt-10"></div>

        <div class="flex mt-5">
            <h3 class="w-1/3 text-xl">Total Amount</h3>
            <h3 class="font-semibold text-xl text-green-600">
                ₹ <%= bill %>
            </h3>
        </div>
    </div>

</div>

<%- include('./partials/footer') %>
